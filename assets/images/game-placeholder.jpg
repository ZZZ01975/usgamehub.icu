<svg width="280" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- 背景 -->
  <rect width="280" height="200" fill="url(#bgGradient)"/>
  
  <!-- 游戏图标 -->
  <g transform="translate(140, 80)">
    <!-- 手柄形状 -->
    <rect x="-30" y="-15" width="60" height="30" rx="15" ry="15" fill="white" opacity="0.9"/>
    
    <!-- 按钮 -->
    <circle cx="15" cy="-5" r="3" fill="#667eea"/>
    <circle cx="20" cy="0" r="3" fill="#667eea"/>
    <circle cx="15" cy="5" r="3" fill="#667eea"/>
    <circle cx="10" cy="0" r="3" fill="#667eea"/>
    
    <!-- 方向键 -->
    <rect x="-20" y="-2" width="8" height="4" rx="2" fill="#667eea"/>
    <rect x="-18" y="-4" width="4" height="8" rx="2" fill="#667eea"/>
    
    <!-- 摇杆 -->
    <circle cx="-10" cy="0" r="5" fill="#667eea" opacity="0.7"/>
  </g>
  
  <!-- 文字 -->
  <text x="140" y="130" font-size="16" font-family="Arial, sans-serif" fill="white" text-anchor="middle" opacity="0.8">
    游戏预览图
  </text>
  
  <!-- 装饰元素 -->
  <circle cx="50" cy="50" r="3" fill="white" opacity="0.5"/>
  <circle cx="230" cy="160" r="4" fill="white" opacity="0.3"/>
  <circle cx="60" cy="170" r="2" fill="white" opacity="0.4"/>
</svg>