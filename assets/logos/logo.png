    <circle cx="14" cy="6" r="1"/>
    <circle cx="16" cy="8" r="1"/>
    <circle cx="14" cy="10" r="1"/>
    <circle cx="12" cy="8" r="1"/>
    
    <!-- 方向键 -->
    <rect x="2" y="7.5" width="3" height="1"/>
    <rect x="3.5" y="6" width="1" height="4"/>
  </g>
  
  <!-- 装饰性光点 -->
  <circle cx="30" cy="12" r="1" fill="white" opacity="0.8"/>
